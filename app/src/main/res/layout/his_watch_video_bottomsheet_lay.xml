<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_edit_his_watch"
    android:background="@drawable/setting_dialog_bg"
    android:paddingBottom="40dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/his_watch_bottomsheet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_title"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ems="10"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/his_watch_bottomsheet_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_24"
            app:tint="@android:color/white"
            android:background="@color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/video_bs_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="11dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_pip_play"
            app:tint="@android:color/white"
            android:background="@color/transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/play_video"
            android:textColor="@color/white"
            android:layout_marginStart="25dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>



