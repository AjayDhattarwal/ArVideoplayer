<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Theme.Videoplayer.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>



    <style name="Widget.Theme.Videoplayer.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_popup_animation</item>
        <item name="android:windowExitAnimation">@anim/exit_popup_animation</item>
    </style>
    <style name="Backward_btn_animation">
        <item name="android:onClick">animateButton</item>
        <item name="android:animation">@anim/backward_anim</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="Widget.Theme.Vidnet.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="PreferenceText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#CDFF0000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue_900</item>
    </style>

